  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext"
  },
  "exclude": [".cache", "node_modules", "public", "**/coverage/**"],
  "include": ["declarations.d.ts", "types.d.ts", "src/**/*.js"]
}
