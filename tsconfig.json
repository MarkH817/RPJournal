{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext"
  },
  "exclude": [".cache", "node_modules", "public", "**/coverage/**"],
  "include": ["type-merges.d.ts", "types.d.ts", "src/**/*.js"]
}
