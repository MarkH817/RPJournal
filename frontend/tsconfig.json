{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "paths": { "*": ["test/types/*"] },
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "esnext"
  },
  "exclude": [".next", "coverage", "node_modules"],
  "include": ["test/theme.d.ts", "test/models.d.ts", "**/*.js"]
}
